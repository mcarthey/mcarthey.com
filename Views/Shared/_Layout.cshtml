<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - GEN-X DEVELOPER TERMINAL</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.12/typed.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/retro-terminal.css" />
</head>
<body>
    <!-- CRT Monitor Container -->
    <div class="crt-container min-h-screen relative">
        <!-- Scanline Effect -->
        <div class="scanline"></div>

        <!-- Power LED -->
        <div class="absolute top-4 right-4">
            <div class="power-led"></div>
        </div>

        <!-- Navigation Header (shown on all pages except home) -->
        @if (ViewContext.RouteData.Values["Controller"]?.ToString() != "Home")
        {
            <div class="absolute top-4 left-4 z-10">
                <button onclick="window.location.href='@Url.Action("Index", "Home")'" class="nav-button text-xs">
                    ← BACK TO TERMINAL
                </button>
            </div>
        }

        <!-- Main Content -->
        <div class="main-content">
            @RenderBody()
        </div>

        <!-- Footer -->
        <div class="absolute bottom-4 left-4 right-4">
            <div class="terminal-text text-xs text-center opacity-50">
                © @DateTime.Now.Year GEN-X DEVELOPER | Built with nostalgia and C# MVC
            </div>
        </div>
    </div>

    <script src="~/js/terminal.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
